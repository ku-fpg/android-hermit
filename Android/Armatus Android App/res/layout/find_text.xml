<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <EditText
        android:id="@+id/find_text_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:hint="Find:"
        android:imeOptions="actionSearch|flagNoExtractUi"
        android:inputType="textNoSuggestions"
        android:minWidth="150dp"
        android:paddingRight="111dp"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/find_text_next"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/find_text_previous"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:padding="8dp"
        android:src="?attr/actionFindNext" />

    <ImageButton
        android:id="@+id/find_text_previous"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/find_text_cancel"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:padding="8dp"
        android:src="?attr/actionFindPrevious" />

    <ImageButton
        android:id="@+id/find_text_cancel"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignRight="@+id/find_text_box"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:padding="8dp"
        android:src="?attr/actionCancel" />

</RelativeLayout>